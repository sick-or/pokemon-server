<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="comment-add">
    <p>
      <%= form.text_field :commenter , placeholder: "Input your name"%>
    </p>
    <p>
      <%= form.text_area :body, placeholder: "Add your comment here" %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  </div>
<% end %>